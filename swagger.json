{
  "swagger": "2.0",
  "info": {
    "description": "한빛 백엔드 API 문서",
    "version": "1.0.0",
    "title": "한빛"
  },
  "host": "host",
  "basePath": "/api",
  "tags": [
    {
      "name": "user",
      "description": "유저"
    },
    {
      "name": "dev",
      "description": "개발할 때 사용 됨"
    }
  ],
  "schemes": ["https"],
  "consumes": ["application/json", "application/x-www-form-urlencoded"],
  "produces": ["application/json"],
  "paths": {
    "/dev/errors": {
      "get": {
        "tags": ["dev"],
        "description": "에러 목록",
        "responses": {
          "200": {
            "description": "성공"
          }
        }
      }
    },
    "/dev/api-docs": {
      "get": {
        "tags": ["dev"],
        "description": "API 문서",
        "responses": {
          "200": {
            "description": "성공"
          }
        }
      }
    },
    "/user/phone": {
      "post": {
        "tags": ["user"],
        "description": "전화번호 인증",
        "parameters": [
          {
            "in": "formData",
            "type": "string",
            "name": "code",
            "description": "FB account kit에서 응답값으로 준 code value",
            "required": true
          },
          {
            "in": "formData",
            "type": "string",
            "name": "signKey",
            "description": "회원가입 키",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "schema": {
              "$ref": "#/definitions/SuccessResponse"
            }
          },
          "204": {
            "description": "회원 중에 이미 번호를 가진 유저가 있어서 다음 프로세스를 진행하지 않아도 됨"
          },
          "401(Wrong_Request)": {
            "description": "facebook account kit으로 요청된 code값이 잘못됨"
          },
          "412(Not_User)": {
            "description": "해당 키에 유저가 조회되지 않음"
          },
          "412(Wrong_Data)": {
            "description": "요청 데이터가 잘못됨"
          },
          "412(Exist_User)": {
            "description": "사용 중인 전화번호"
          }
        }
      }
    },
    "/user/exist": {
      "get": {
        "tags": ["user"],
        "description": "아이디 중복확인",
        "parameters": [
          {
            "in": "query",
            "type": "string",
            "name": "key",
            "description": "[id(아이디), tp(전화번호), signKey(회원가입 키)] 중 하나",
            "required": true
          },
          {
            "in": "query",
            "type": "string",
            "name": "value",
            "description": "key값에 따른 value",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "schema": {
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "exist": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "412(Wrong_Data)": {
            "description": "요청값의 이상"
          }
        }
      }
    },
    "/user/register": {
      "post": {
        "tags": ["user"],
        "description": "회원가입",
        "parameters": [
          {
            "in": "formData",
            "type": "string",
            "name": "id",
            "description": "아이디",
            "required": true
          },
          {
            "in": "formData",
            "type": "string",
            "name": "password",
            "description": "비밀번호",
            "required": true
          },
          {
            "in": "formData",
            "type": "string",
            "name": "signKey",
            "description": "회원가입 키",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "schema": {
              "$ref": "#/definitions/SuccessResponse"
            }
          },
          "401(Wrong_Request)": {
            "description": "전화번호 인증을 받지 않았는데 회원가입 요청을 날린 경우"
          },
          "412(Exist_User)": {
            "description": "아이디가 사용 중일 때"
          }
        }
      }
    },
    "/user/login": {
      "post": {
        "tags": ["user"],
        "description": "로그인",
        "parameters": [
          {
            "in": "formData",
            "type": "string",
            "name": "id",
            "description": "아이디",
            "required": true
          },
          {
            "in": "formData",
            "type": "string",
            "name": "password",
            "description": "비밀번호",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "schema": {
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "data": {
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    },
                    "user": {
                      "$ref": "#/definitions/User"
                    }
                  }
                }
              }
            }
          },
          "412(Not_User)": {
            "description": "등록되지 않은 아이디이거나, 아이디 또는 비밀번호를 잘못 입력하셨습니다."
          }
        }
      }
    },
    "/user/recovery/id": {
      "post": {
        "tags": ["user"],
        "description": "아이디 찾기",
        "parameters": [
          {
            "in": "formData",
            "type": "string",
            "name": "code",
            "description": "FB account kit에서 응답값으로 준 code value",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "schema": {
              "properties": {
                "success": {
                  "type": "boolean"
                },
                "data": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401(Wrong_Request)": {
            "description": "facebook account kit으로 요청된 code값이 잘못됨"
          },
          "412(Not_User)": {
            "description": "해당 데이터를 가진 유저가 조회되지 않음"
          },
          "412(Wrong_Data)": {
            "description": "요청 데이터가 잘못됨"
          }
        }
      }
    },
    "/user/recovery/password": {
      "post": {
        "tags": ["user"],
        "description": "비밀번호 찾기",
        "parameters": [
          {
            "in": "formData",
            "type": "string",
            "name": "code",
            "description": "FB account kit에서 응답값으로 준 code value",
            "required": true
          },
          {
            "in": "formData",
            "type": "string",
            "name": "id",
            "description": "유저의 아이디",
            "required": true
          },
          {
            "in": "formData",
            "type": "string",
            "name": "password",
            "description": "뱐경할 비밀번호",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "schema": {
              "properties": {
                "success": {
                  "type": "boolean"
                }
              }
            }
          },
          "401(Wrong_Request)": {
            "description": "facebook account kit으로 요청된 code값이 잘못됨"
          },
          "412(Not_User)": {
            "description": "해당 데이터를 가진 유저가 조회되지 않음"
          },
          "412(Wrong_Data)": {
            "description": "요청 데이터가 잘못됨"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["student", "teacher"]
        },
        "admin": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "major": {
          "type": "string",
          "description": "학과"
        },
        "grade": {
          "type": "string",
          "description": "학년"
        },
        "classNum": {
          "type": "string",
          "description": "반"
        },
        "studentNum": {
          "type": "string",
          "description": "학급에서의 번호"
        }
      }
    },
    "SuccessResponse": {
      "type": "object",
      "required": ["success", "data"],
      "properties": {
        "success": {
          "type": "boolean"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "required": ["success", "code", "name", "message", "description"],
      "properties": {
        "success": {
          "type": "boolean"
        },
        "code": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "message": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
