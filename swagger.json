    "/user/phone": {
      "post": {
        "tags": ["user"],
        "description": "전화번호 인증",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "code": {
                    "type": "string",
                    "description": "FB account kit에서 응답값으로 준 code value"
                  },
                  "signKey": {
                    "type": "string",
                    "description": "회원가입 키"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          },
          "204": {
            "description": "회원 중에 이미 번호를 가진 유저가 있어서 다음 프로세스를 진행하지 않아도 됨"
          },
          "401": {
            "description": "(Wrong_Request) facebook account kit으로 요청된 code값이 잘못됨"
          },
          "412": {
            "description": "해당 키에 유저가 조회되지 않음, 요청 데이터가 잘못됨, 요청 데이터가 이미 데이터베이스에 존재함"
          }
        }
      }
    },
    "/user/exist": {
      "get": {
        "tags": ["user"],
        "description": "아이디 중복확인",
        "parameters": [
          {
            "in": "query",
            "schema": {
              "type": "string"
            },
            "name": "key",
            "description": "[id(아이디), tp(전화번호), signKey(회원가입 키)] 중 하나",
            "required": true
          },
          {
            "in": "query",
            "schema": {
              "type": "string"
            },
            "name": "value",
            "description": "key값에 따른 value",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "성공",
            "content": {
              "application/json": {
                "schema": {
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "exist": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "412": {
            "description": "요청값의 이상"
          }
        }
      }
    },
